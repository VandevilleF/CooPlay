# Builder stage (build + generate Prisma)
FROM node:22-bullseye-slim AS builder
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends build-essential python3 git ca-certificates libsodium-dev && rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm ci

COPY . .

RUN npx prisma generate --schema=src/persistence/prisma/schema.prisma

# Build seulement si le script existe
RUN if grep -q "\"build\"" package.json; then npm run build; fi

# Production stage
FROM node:22-bullseye-slim AS runner
WORKDIR /app

ENV NODE_ENV=production
RUN useradd --system --uid 1001 --create-home appuser

COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules

# Copier le dossier src (qui contient ton code et le schema Prisma)
COPY --from=builder /app/src ./src

RUN chown -R appuser:appuser /app
USER appuser

EXPOSE 3000

CMD ["npm", "run", "start"]
